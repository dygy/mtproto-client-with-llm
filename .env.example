# Telegram API Configuration
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend Configuration
PUBLIC_API_URL=http://localhost:4000/api
PUBLIC_WS_URL=ws://localhost:4000/ws

# Optional: CORS Configuration
FRONTEND_URL=http://localhost:3000

# Session Storage (optional, defaults to ./sessions)
SESSIONS_DIR=./sessions

# Logging Level (optional)
LOG_LEVEL=info

# LLM Provider API Keys (optional - configure only the providers you want to use)
# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API Key - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Mistral AI API Key - Get from https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# Google Gemini API Key - Get from https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here
